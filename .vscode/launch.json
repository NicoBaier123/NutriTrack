{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run NutriTrack Backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app","--app-dir","src","--reload","--host","127.0.0.1","--port","8000"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "jinja": false,
      "preLaunchTask": "Install deps",
      "envFile": "${workspaceFolder}/backend/.env",
      "serverReadyAction": {
        "pattern": "Uvicorn running on (http://127\\.0\\.0\\.1:8000)",
        "uriFormat": "%s/docs",
        "action": "openExternally"
      },
      "justMyCode": true
    },
    {
      "name": "Run NutriTrack Backend (open /demo)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app","--reload","--host","127.0.0.1","--port","8000"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "jinja": false,
      "preLaunchTask": "Install deps",
      "envFile": "${workspaceFolder}/backend/.env",
      "serverReadyAction": {
        "pattern": "Uvicorn running on (http://127\\.0\\.0\\.1:8000)",
        "uriFormat": "%s/demo",
        "action": "openExternally"
      },
      "justMyCode": true
    }
  ]
}
