{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install deps",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pip", "install", "-r", "backend/requirements.txt"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Pytest (backend)",
      "type": "shell",
      "command": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
      "args": ["-m", "pytest"],
      "options": { "cwd": "${workspaceFolder}/backend" },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
